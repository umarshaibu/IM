# IM Environment Configuration
# Copy this file to .env and fill in the values

# PostgreSQL Database
POSTGRES_USER=im_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=im_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=IM
JWT_AUDIENCE=IM-App

# LiveKit Configuration
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecret

# Firebase Configuration (for push notifications)
# Place your firebase-credentials.json in the backend folder
FIREBASE_PROJECT_ID=your-firebase-project-id

# Mobile App Configuration
API_URL=http://localhost:5000/api
SIGNALR_URL=http://localhost:5000/hubs
LIVEKIT_URL=ws://localhost:7880

# Optional: External URLs (for production)
# PUBLIC_API_URL=https://api.yourdomain.com
# PUBLIC_SIGNALR_URL=wss://api.yourdomain.com/hubs
# PUBLIC_LIVEKIT_URL=wss://livekit.yourdomain.com
