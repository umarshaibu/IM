<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Background gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/incoming_call_background" />

    <!-- Top section: Call type indicator -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/callTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming voice call"
            android:textColor="#AAAAAA"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Center section: Caller info -->
    <LinearLayout
        android:id="@+id/centerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <!-- Avatar circle with pulse animation -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center">

            <!-- Pulse ring 1 -->
            <View
                android:id="@+id/pulseRing1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/pulse_ring" />

            <!-- Pulse ring 2 -->
            <View
                android:id="@+id/pulseRing2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/pulse_ring" />

            <!-- Avatar background -->
            <View
                android:id="@+id/avatarBackground"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_circle" />

            <!-- Avatar initials -->
            <TextView
                android:id="@+id/avatarInitials"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="JD"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Caller name -->
        <TextView
            android:id="@+id/callerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="John Doe"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Status text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ringing..."
            android:textColor="#AAAAAA"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Bottom section: Accept/Decline buttons -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="48dp">

        <!-- Decline button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/declineButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/decline_button_background"
                android:contentDescription="Decline call"
                android:src="@drawable/ic_call_end"
                android:scaleType="center"
                android:padding="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Decline"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Accept button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/acceptButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/accept_button_background"
                android:contentDescription="Accept call"
                android:src="@drawable/ic_call_accept"
                android:scaleType="center"
                android:padding="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
