@model NominalRollListViewModel
@{
    ViewData["Title"] = "Nominal Roll";
    ViewData["ActivePage"] = "NominalRoll";
}

<!-- Toolbar -->
<div class="d-flex flex-wrap flex-stack mb-6">
    <div class="d-flex flex-column flex-grow-1 pe-8">
        <div class="d-flex flex-wrap">
            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-lines-fill fs-3 text-primary me-2"></i>
                    <div class="fs-2 fw-bold">@Model.TotalCount</div>
                </div>
                <div class="fw-semibold fs-6 text-gray-500">Total Entries</div>
            </div>
        </div>
    </div>
    <div class="d-flex align-items-center">
        <a href="/admin/nominal-roll/create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Add Entry
        </a>
    </div>
</div>

<!-- Search Card -->
<div class="card mb-5">
    <div class="card-body">
        <form method="get" class="d-flex align-items-center position-relative">
            <i class="bi bi-search fs-3 text-gray-500 position-absolute ms-4"></i>
            <input type="text" class="form-control form-control-solid ps-12 w-350px me-3" name="search"
                   value="@Model.Search" placeholder="Search by service number, name, or department..." />
            <button type="submit" class="btn btn-primary me-3">
                <i class="bi bi-search me-1"></i>Search
            </button>
            @if (!string.IsNullOrEmpty(Model.Search))
            {
                <a href="/admin/nominal-roll" class="btn btn-light-secondary">
                    <i class="bi bi-x me-1"></i>Clear
                </a>
            }
        </form>
    </div>
</div>

<!-- Nominal Roll Table -->
<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <h3 class="card-label fw-bold fs-3">
                Personnel List
                @if (!string.IsNullOrEmpty(Model.Search))
                {
                    <span class="text-muted fs-6 ms-1">- Search results for "@Model.Search"</span>
                }
            </h3>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="table-responsive">
            <table class="table align-middle table-row-dashed fs-6 gy-5">
                <thead>
                    <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                        <th class="min-w-125px">Service Number</th>
                        <th class="min-w-200px">Full Name</th>
                        <th class="min-w-125px">Phone</th>
                        <th class="min-w-150px">Email</th>
                        <th class="min-w-125px">Department</th>
                        <th class="min-w-125px">Rank/Position</th>
                        <th class="min-w-100px">Status</th>
                        <th class="min-w-100px">Registered</th>
                        <th class="text-end min-w-100px">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 fw-semibold">
                    @if (!Model.Entries.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center py-10">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="bi bi-inbox fs-2tx text-gray-300 mb-3"></i>
                                    <span class="text-gray-500 fs-5">No entries found</span>
                                </div>
                            </td>
                        </tr>
                    }
                    @foreach (var entry in Model.Entries)
                    {
                        <tr>
                            <td>
                                <span class="badge badge-light-dark fs-7 fw-bold">@entry.ServiceNumber</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-circle symbol-40px overflow-hidden me-3">
                                        <div class="symbol-label fs-5 fw-semibold bg-light-info text-info">
                                            @entry.FullName.Substring(0, 1).ToUpper()
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="text-gray-800 fw-bold">@entry.FullName</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-gray-600">@(entry.PhoneNumber ?? "-")</span>
                            </td>
                            <td>
                                <span class="text-gray-600">@(entry.Email ?? "-")</span>
                            </td>
                            <td>@(entry.Department ?? "-")</td>
                            <td>@(entry.RankPosition ?? "-")</td>
                            <td>
                                @switch (entry.Status)
                                {
                                    case IM.Core.Enums.UserStatus.Active:
                                        <span class="badge badge-light-success">Active</span>
                                        break;
                                    case IM.Core.Enums.UserStatus.Suspended:
                                        <span class="badge badge-light-danger">Suspended</span>
                                        break;
                                    case IM.Core.Enums.UserStatus.Inactive:
                                        <span class="badge badge-light-warning">Inactive</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (entry.User != null)
                                {
                                    <span class="badge badge-light-success">
                                        <i class="bi bi-check2 me-1"></i>Yes
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-light-secondary">No</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="/admin/nominal-roll/@entry.Id/edit" class="btn btn-sm btn-light btn-active-light-primary me-1">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                @if (entry.User == null)
                                {
                                    <form asp-action="DeleteNominalRoll" asp-route-id="@entry.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this entry?');">
                                        <button type="submit" class="btn btn-sm btn-light-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="card-footer d-flex justify-content-between align-items-center flex-wrap">
            <div class="fs-6 text-gray-700">
                Showing @((Model.CurrentPage - 1) * 20 + 1) to @(Math.Min(Model.CurrentPage * 20, Model.TotalCount)) of @Model.TotalCount entries
            </div>
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "previous")">
                    <a href="/admin/nominal-roll?page=@(Model.CurrentPage - 1)&search=@Model.Search" class="page-link">
                        <i class="bi bi-chevron-left fs-7"></i>
                    </a>
                </li>
                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a href="/admin/nominal-roll?page=@i&search=@Model.Search" class="page-link">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "next")">
                    <a href="/admin/nominal-roll?page=@(Model.CurrentPage + 1)&search=@Model.Search" class="page-link">
                        <i class="bi bi-chevron-right fs-7"></i>
                    </a>
                </li>
            </ul>
        </div>
    }
</div>
