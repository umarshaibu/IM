@model ChannelsListViewModel
@{
    ViewData["Title"] = "Channels";
    ViewData["ActivePage"] = "Channels";
}

<!-- Toolbar -->
<div class="d-flex flex-wrap flex-stack mb-6">
    <div class="d-flex flex-column flex-grow-1 pe-8">
        <div class="d-flex flex-wrap">
            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-broadcast fs-3 text-primary me-2"></i>
                    <div class="fs-2 fw-bold">@Model.TotalCount</div>
                </div>
                <div class="fw-semibold fs-6 text-gray-500">Total Channels</div>
            </div>
        </div>
    </div>
</div>

<!-- Search Card -->
<div class="card mb-5">
    <div class="card-body">
        <form method="get" class="d-flex align-items-center position-relative">
            <i class="bi bi-search fs-3 text-gray-500 position-absolute ms-4"></i>
            <input type="text" class="form-control form-control-solid ps-12 w-350px me-3" name="search"
                   value="@Model.Search" placeholder="Search by channel name or description..." />
            <button type="submit" class="btn btn-primary me-3">
                <i class="bi bi-search me-1"></i>Search
            </button>
            @if (!string.IsNullOrEmpty(Model.Search))
            {
                <a href="/admin/channels" class="btn btn-light-secondary">
                    <i class="bi bi-x me-1"></i>Clear
                </a>
            }
        </form>
    </div>
</div>

<!-- Channels Table -->
<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <h3 class="card-label fw-bold fs-3">
                Channel List
                @if (!string.IsNullOrEmpty(Model.Search))
                {
                    <span class="text-muted fs-6 ms-1">- Search results for "@Model.Search"</span>
                }
            </h3>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="table-responsive">
            <table class="table align-middle table-row-dashed fs-6 gy-5">
                <thead>
                    <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                        <th class="min-w-250px">Channel</th>
                        <th class="min-w-150px">Owner</th>
                        <th class="min-w-100px">Followers</th>
                        <th class="min-w-100px">Visibility</th>
                        <th class="min-w-100px">Status</th>
                        <th class="min-w-125px">Created</th>
                        <th class="text-end min-w-100px">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 fw-semibold">
                    @if (!Model.Channels.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-10">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="bi bi-broadcast fs-2tx text-gray-300 mb-3"></i>
                                    <span class="text-gray-500 fs-5">No channels found</span>
                                </div>
                            </td>
                        </tr>
                    }
                    @foreach (var channel in Model.Channels)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-50px overflow-hidden me-3">
                                        @if (!string.IsNullOrEmpty(channel.IconUrl))
                                        {
                                            <div class="symbol-label">
                                                <img src="@channel.IconUrl" alt="@channel.Name" class="w-100" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="symbol-label fs-5 fw-semibold bg-light-primary text-primary">
                                                <i class="bi bi-broadcast fs-3"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="text-gray-800 fw-bold mb-1">
                                            @channel.Name
                                            @if (channel.IsVerified)
                                            {
                                                <i class="bi bi-patch-check-fill text-primary ms-1" title="Verified"></i>
                                            }
                                        </span>
                                        <span class="text-muted fs-7">@(channel.Description?.Length > 50 ? channel.Description.Substring(0, 50) + "..." : channel.Description ?? "No description")</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (channel.Owner != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-30px symbol-circle overflow-hidden me-2">
                                            <div class="symbol-label fs-7 fw-semibold bg-light-info text-info">
                                                @((channel.Owner.DisplayName ?? channel.Owner.NominalRoll?.FullName ?? "U").Substring(0, 1).ToUpper())
                                            </div>
                                        </div>
                                        <span class="text-gray-700">@(channel.Owner.DisplayName ?? channel.Owner.NominalRoll?.FullName ?? "Unknown")</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Unknown</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-people me-2 text-gray-500"></i>
                                    <span class="fw-bold">@channel.FollowerCount</span>
                                </div>
                            </td>
                            <td>
                                @if (channel.IsPublic)
                                {
                                    <span class="badge badge-light-success">Public</span>
                                }
                                else
                                {
                                    <span class="badge badge-light-secondary">Private</span>
                                }
                            </td>
                            <td>
                                @if (channel.IsVerified)
                                {
                                    <span class="badge badge-light-primary">
                                        <i class="bi bi-patch-check me-1"></i>Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-light-secondary">Unverified</span>
                                }
                            </td>
                            <td>
                                <span class="text-gray-600">@channel.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end">
                                    <form asp-action="VerifyChannel" asp-route-id="@channel.Id" method="post" class="d-inline me-1">
                                        @if (channel.IsVerified)
                                        {
                                            <input type="hidden" name="verified" value="false" />
                                            <button type="submit" class="btn btn-sm btn-light-warning" title="Remove Verification">
                                                <i class="bi bi-patch-minus"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <input type="hidden" name="verified" value="true" />
                                            <button type="submit" class="btn btn-sm btn-light-primary" title="Verify Channel">
                                                <i class="bi bi-patch-check"></i>
                                            </button>
                                        }
                                    </form>
                                    <form asp-action="DeleteChannel" asp-route-id="@channel.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this channel? This action cannot be undone.');">
                                        <button type="submit" class="btn btn-sm btn-light-danger" title="Delete Channel">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="card-footer d-flex justify-content-between align-items-center flex-wrap">
            <div class="fs-6 text-gray-700">
                Showing @((Model.CurrentPage - 1) * 20 + 1) to @(Math.Min(Model.CurrentPage * 20, Model.TotalCount)) of @Model.TotalCount entries
            </div>
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "previous")">
                    <a href="/admin/channels?page=@(Model.CurrentPage - 1)&search=@Model.Search" class="page-link">
                        <i class="bi bi-chevron-left fs-7"></i>
                    </a>
                </li>
                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a href="/admin/channels?page=@i&search=@Model.Search" class="page-link">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "next")">
                    <a href="/admin/channels?page=@(Model.CurrentPage + 1)&search=@Model.Search" class="page-link">
                        <i class="bi bi-chevron-right fs-7"></i>
                    </a>
                </li>
            </ul>
        </div>
    }
</div>
